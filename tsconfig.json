{
  "compilerOptions": {
    "outDir": "./outjs/",
    "esModuleInterop": false,
    "sourceMap": true,
    "module": "es2015",
    "target": "es5",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "lib": [
      "es2015",
      "dom"
    ],
  },
  "include": [
    "./src/**/*.ts"
  ]
}